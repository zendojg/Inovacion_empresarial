<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuActivity">

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:background="@drawable/background_shadow_low"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/encuestatitle"
        android:textSize="16sp"
        android:textStyle="bold" />


  </LinearLayout>


  <LinearLayout
      android:id="@+id/linearEncuestaMain"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_margin="5dp"
      android:orientation="vertical"
      android:paddingHorizontal="10dp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <Button
        android:id="@+id/btcap01main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text=" Iniciar una Encuesta"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#218CBF"
        app:icon="@drawable/img_add_page" />

    <Button
        android:id="@+id/btcap02main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawableTint="@color/white"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text=" Encuestas Guardadas"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#D8B18B"
        app:icon="@drawable/img_find_page" />

    <Button
        android:id="@+id/btcap03main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawableTint="@color/white"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text="xxxxxxxxxxxxx"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#299F55"
        app:icon="?android:attr/alertDialogIcon" />

    <Button
        android:id="@+id/btcap04main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawableTint="@color/white"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text="xxxxxxxxxxxxx"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#113CBF"
        app:icon="?android:attr/alertDialogIcon" />

    <Button
        android:id="@+id/btcap05main"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:drawableTint="@color/white"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text="xxxxxxxxxxxxx"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#236CBF"
        app:icon="?android:attr/alertDialogIcon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="127dp"
        android:layout_height="111dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_contraloria" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="98dp"
        android:layout_height="71dp"
        android:src="@drawable/logo_inec" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="145dp"
        android:layout_height="84dp"
        android:src="@drawable/logo_senacyt" />


  </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>