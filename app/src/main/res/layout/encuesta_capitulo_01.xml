<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data />
    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/background_shadow_med"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameCap1_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint01"
                    android:textColorHint="@color/black"
                    app:startIconContentDescription="LocalizaciÃ³n">

                    <AutoCompleteTextView
                        android:id="@+id/txtCap1_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:entries="@array/arr_provincias"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="none"
                        android:text="@string/prov"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtCap1_1ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="@string/doublecero"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameCap1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/frameCap1_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint02"
                    android:textColorHint="@color/black"
                    app:startIconContentDescription="Distrito">

                    <AutoCompleteTextView
                        android:id="@+id/txtCap1_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="none"
                        android:text="@string/dist"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtCap1_2ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="@string/doublecero"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameCap1_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/frameCap1_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint03"
                    android:textColorHint="@color/black"
                    app:startIconContentDescription="Corregimiento">

                    <AutoCompleteTextView
                        android:id="@+id/txtCap1_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="none"
                        android:text="@string/corre"
                        android:textColor="#0277BD"
                        android:textSize="16sp"
                        tools:ignore="LabelFor" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/txtCap1_3ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="@string/doublecero"
                    android:textSize="15sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameCap1_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/frameCap1_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint04"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="20dp"
                    app:startIconContentDescription="Corregimiento">

                    <AutoCompleteTextView
                        android:id="@+id/txtCap1_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="none"
                        android:textSize="16sp"
                        tools:ignore="LabelFor"
                        tools:text="Lugar Poblado" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/txtCap1_4ID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:text="@string/doublecero"
                    android:textSize="15sp" />

            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/frameCap1_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</layout>