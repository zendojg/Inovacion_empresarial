                        android:fontFamily="sans-serif-condensed"
                        android:inputType="textEmailAddress"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:text="correo@email.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 12. -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:hint="@string/hint12"
                    android:textColorHint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCap2_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="textWebEmailAddress"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:text="web@emp.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:paddingBottom="2dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint13"
                        android:textColorHint="@color/black"
                        app:helperText="Solo para empresas de Zona Libre de CÃ³lon"
                        app:helperTextTextAppearance="@style/TextLabel1"
                        app:helperTextTextColor="@android:color/holo_blue_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shadow"
                            android:drawableTint="@android:color/holo_blue_dark"
                            android:fontFamily="sans-serif-condensed"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="TextContrastCheck"
                            tools:text="00000" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:hint="@string/hint14"
                    android:textColorHint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCap2_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="number"
                        android:maxLength="3"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:text="000" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:hint="@string/hint15"
                        android:textColorHint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:inputType="number"
                            android:maxLength="3"
                            tools:ignore="TouchTargetSizeCheck"
                            tools:text="000" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="6"
                        android:hint="Y cuÃ¡ntos en otras provincias?"
                        android:textColorHint="@android:color/holo_blue_dark"
                        app:startIconContentDescription="LocalizaciÃ³n">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_15_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:inputType="number"
                            tools:ignore="TouchTargetSizeCheck"
                            tools:text="000" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></View>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>