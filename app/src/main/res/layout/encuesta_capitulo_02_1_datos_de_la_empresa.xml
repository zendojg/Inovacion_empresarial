                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:inputType="numberSigned"
                            android:maxLength="20"
                            tools:text="0000-0000" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/btCap2_9_tel2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="32dp"
                        android:layout_height="45dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginEnd="10dp"
                        android:drawableTop="@drawable/img_remove"
                        android:drawableTint="@android:color/holo_blue_dark"
                        android:fontFamily="sans-serif-condensed"
                        app:cornerRadius="40dp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </FrameLayout>


                <!-- 10. -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:hint="@string/hint10"
                    android:textColorHint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCap2_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="numberSigned"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:text="0000-0000" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 11. -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:hint="@string/hint11"
                    android:textColorHint="@color/black">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCap2_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
