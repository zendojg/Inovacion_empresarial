                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="2dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <!-- 08. -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint08"
                        android:textColorHint="@color/black"
                        app:errorEnabled="true"
                        app:helperText="Orden a anotar: Mall o centro comercial, avenida, calle, edificio o casa y piso"
                        app:helperTextTextAppearance="@style/TextLabel1"
                        app:helperTextTextColor="@android:color/holo_blue_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_shadow"
                            android:drawableTint="@android:color/holo_blue_dark"
                            android:fontFamily="sans-serif-condensed"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="TextContrastCheck"
                            tools:text="DirecciÃ³n del local" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginVertical="3dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="6"
                        android:hint="1. Otras Referencias"
                        android:textColorHint="@android:color/holo_blue_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_8_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:inputType="textCapWords"
                            tools:ignore="TouchTargetSizeCheck"
                            tools:text="Otra referencia" />
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <!-- 09. -->
                <FrameLayout
                    android:id="@+id/frameCap2_9_tel1"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/hint091"
                        android:textColorHint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txtCap2_9_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            android:fontFamily="sans-serif-condensed"
                            android:inputType="numberSigned"
                            android:maxLength="20"
                            tools:text="0000-0000" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btCap2_9_tel1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="32dp"
                        android:layout_height="45dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="4dp"
                        android:layout_marginEnd="10dp"
                        android:drawableTop="@drawable/img_add"
                        android:drawableTint="@android:color/holo_blue_dark"
                        android:fontFamily="sans-serif-condensed"
                        app:cornerRadius="40dp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                </FrameLayout>

                <!-- 09. -->
                <FrameLayout
                    android:id="@+id/frameCap2_9_tel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:visibility="gone"
                    android:animateLayoutChanges="true"
                    tools:visibility="visible">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint092"
                        android:textColorHint="@color/black"
