                        tools:ignore="TouchTargetSizeCheck"
                        android:autofillHints="%" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/background_shadow_low"
