                    </LinearLayout>

                    <EditText
                        android:id="@+id/rbtSecc04_10_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:inputType="number"
                        android:maxLength="3"
                        android:hint="%"
