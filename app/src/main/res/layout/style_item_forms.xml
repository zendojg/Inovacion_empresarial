<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/background_shadow_celpast"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/lbncontrolRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:text="N° control:"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtncontrolRC"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            app:layout_constraintBottom_toBottomOf="@+id/lbncontrolRC"
            app:layout_constraintStart_toEndOf="@+id/lbncontrolRC"
            app:layout_constraintTop_toTopOf="@+id/lbncontrolRC"
            tools:text="@string/_00000" />


        <TextView
            android:id="@+id/lbrucRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:text="RUC:"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txtncontrolRC"
            app:layout_constraintStart_toEndOf="@+id/txtncontrolRC"
            app:layout_constraintTop_toTopOf="@+id/txtncontrolRC" />

        <TextView
            android:id="@+id/txtrucRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/text14"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/lbrucRC"
            app:layout_constraintStart_toEndOf="@+id/lbrucRC"
            app:layout_constraintTop_toTopOf="@+id/lbrucRC"
            tools:text="@string/rucex" />


        <TextView
            android:id="@+id/lbnameLRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:animateLayoutChanges="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="1"
            android:textSize="@dimen/text18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbncontrolRC"
            tools:text="Nombre Comercial " />


        <TextView
            android:id="@+id/lbconditionRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Condición:"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbnameLRC" />

        <TextView
            android:id="@+id/txtconditionRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            app:layout_constraintBottom_toBottomOf="@+id/lbconditionRC"
            app:layout_constraintStart_toEndOf="@+id/lbconditionRC"
            app:layout_constraintTop_toTopOf="@+id/lbconditionRC"
            tools:text="Condición de la encuesta" />


        <TextView
            android:id="@+id/lbinconsistenciasRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Inconsistencias:"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbconditionRC" />

        <TextView
            android:id="@+id/txtinconsistenciasRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            app:layout_constraintBottom_toBottomOf="@+id/lbinconsistenciasRC"
            app:layout_constraintStart_toEndOf="@+id/lbinconsistenciasRC"
            app:layout_constraintTop_toTopOf="@+id/lbinconsistenciasRC"
            tools:text="Condición de la encuesta" />

        <TextView
            android:id="@+id/lbdatesaveRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="3dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Fecha creación:"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbinconsistenciasRC" />

        <TextView
            android:id="@+id/txtdatesaveRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/text14"
            app:layout_constraintBottom_toBottomOf="@+id/lbdatesaveRC"
            app:layout_constraintStart_toEndOf="@+id/lbdatesaveRC"
            app:layout_constraintTop_toTopOf="@+id/lbdatesaveRC"
            tools:text="00/00/00" />

        <ImageView
            android:id="@+id/imgStateRC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/img_save_solid" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>