<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inovacion_empresarial" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3989A8</item>
        <item name="colorPrimaryVariant">#039CCF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#76B5E1</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


        <!--  Spinner style______________________         -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>
        <!-- individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>
    </style>


    <style name="TextLabel1" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="menu_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">2dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="hint10" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="hint12" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>